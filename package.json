{
  "name": "react-datasheet",
  "version": "1.4.9",
  "description": "Excel-like data grid for React",
  "repository": {
    "type": "git",
    "url": "https://github.com/nadbm/react-datasheet.git"
  },
  "author": "Nadim Islam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nadbm/react-datasheet/issues"
  },
  "keywords": [
    "react-component",
    "react"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "clean": "rimraf dist lib",
    "build:types": "tsc --emitDeclarationOnly --outDir types",
    "build:js": "babel ./src --out-dir ./lib --extensions .js,.jsx,.ts,.tsx --ignore \"**/*.test.js,**/*.test.ts,**/*.test.tsx\"",
    "build": "npm run clean && npm run build:types && npm run build:js && shx cp src/react-datasheet.css lib",
    "build:watch": "watch 'npm run build' ./src",
    "prepublishOnly": "npm run build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test": "NODE_ENV=test nyc --  mocha ./test/**/*.js --require @babel/register",
    "test:watch": "watch 'npm run test' ./test ./src",
    "format": "prettier --write '{src,test}/**/*.{js,jsx,ts,tsx}' --ignore-path .gitignore",
    "format:check": "prettier --check '{src,test}/**/*.{js,jsx,ts,tsx}' --ignore-path .gitignore"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.1",
    "@babel/preset-env": "^7.24.1",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@babel/register": "^7.23.7",
    "@types/chai": "^4.3.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/sinon": "^17.0.3",
    "babel-eslint": "^10.1.0",
    "chai": "^4.4.1",
    "core-js": "^3.36.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "expect": "^29.7.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "mocha": "^10.3.0",
    "mocha-jsdom": "~2.0.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "sinon": "^17.0.1",
    "typescript": "^5.3.3",
    "watch": "^1.0.2"
  },
  "peerDependencies": {
    "prop-types": ">=15",
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "files": [
    "lib",
    "types",
    "src/react-datasheet.css"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "main": "lib/index.js",
  "types": "types/index.d.ts"
}
